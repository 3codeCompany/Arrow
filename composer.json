{
  "name": "arrow/engine",
  "type": "library",
  "authors": [
    {
      "name": "Artur Kmera",
      "email": "artur.kmera@3code.pl"
    }
  ],
  "require": {
    "robloach/component-installer": "*",
    "fortawesome/font-awesome": "4.7.0"
  },
  "autoload": {
    "classmap": [
      "src/"
    ]
  },
  "config": {
    "component-dir": "assets",
    "component-baseurl": "assets",
    "component-scriptFilters": {
    }
  },
  "extra": {
    "component": {
      "scripts": [
        "js/bootstrap.js"
      ],
      "styles": [
        "css/bootstrap.css"
      ],
      "files": [
        "src/packages/org.arrowplatform.common/layouts/admin/styles/*.css",
        "src/packages/org.arrowplatform.common/layouts/admin/scripts/*.js",
        "src/packages/org.arrowplatform.common/layouts/admin/images/*.*"
      ],
      "fortawesome/font-awesome": {
        "styles": [
          "css/font-awesome.min.css"
        ],
        "files": [
          "fonts/*"
        ]
      }
    }
  }
}

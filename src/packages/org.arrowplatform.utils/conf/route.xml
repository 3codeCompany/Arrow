<?xml version="1.0" ?>
<route controller="Arrow\Package\Utils\UtilsController">
    <path path="/developer/" type="prefix" controller="Arrow\Package\Utils\DeveloperController" />
    <views>
        <section layout="Arrow\Package\Common\AdministrationLayout"
                 controller="Arrow\Package\Utils\DeveloperController">
            <view path="/developer/console"/>
            <view path="/developer/db/dump_list"/>
            <view path="/developer/deploy"/>

            <view path="/developer/routing"/>
            <view path="/developer/log/list"/>
        </section>
        <section layout="Arrow\Package\Common\AdministrationLayout">
            <view path="/utils/dictonaries/list"/>
            <view path="/settings/list"/>
            <view path="/utils/calendar/list"/>
            <view path="/utils/calendar/edit"/>
            <view path="/utils/wyswig/styles/list"/>
            <view path="/utils/wyswig/section/list"/>
            <view path="/utils/wyswig/styles/edit"/>
            <view path="/utils/wyswig/section/edit"/>
            <view path="/utils/wyswig/configuration/edit"/>
            <view path="/utils/wyswig/configuration/list"/>
            <view path="/utils/analitycs/dashboard/accounts"/>
            <view path="/utils/calendar/dashboard/main"/>
            <view path="/utils/calendar/view"/>
            <view path="/utils/links/list"/>
            <view path="/utils/links/edit"/>
            <view path="/utils/links/popupBrowser"/>
        </section>
        <section layout="Arrow\Package\Common\AdministrationPopupLayout">
            <view path="/utils/track/showHistory"/>
            <view path="/utils/dictonaries/edit"/>
        </section>
        <section layout="Arrow\Package\Common\AdministrationPopupLayout"
                 controller="Arrow\Package\Utils\DeveloperController">
            <view path="/developer/log/view"/>
        </section>
        <section layout="Arrow\Package\Common\EmptyLayout" controller="Arrow\Package\Utils\DeveloperController">
            <view path="/developer/console_execute"/>

        </section>
    </views>
    <operations>
        <section controller="Arrow\Package\Utils\DeveloperController">
            <operation path="/developer/clear_cache"/>
            <operation path="/developer/saveConsoleCode"/>
            <operation path="/developer/db/dump"/>
            <operation path="/developer/db/dump_get"/>
            <operation path="/developer/db/dump_delete"/>
            <operation path="/developer/deploy"/>
        </section>
        <operation path="/settings/save_settings"/>
    </operations>
</route>

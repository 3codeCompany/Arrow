<?xml version="1.0"?>
<route controller="Arrow\Package\Access\AccessController">
    <views>
        <section layout="Arrow\Package\Common\AdministrationLayout">
            <view path="/auth/permissionDeny"/>
            <view path="/access/list"/>
            <view path="/users/list"/>
            <view path="/users/account"/>
            <view path="/groups/list"/>
        </section>
        <section layout="Arrow\Package\Common\AdministrationPopupLayout">
            <view path="/users/edit"/>
            <view path="/groups/edit"/>
        </section>
        <section layout="Arrow\Package\Common\EmptyLayout">
            <view path="/auth/login" front-name="login"/>
            <view path="/dashboard/main"/>
        </section>
        <section>

        </section>
    </views>
    <operations>
        <operation path="/auth/login" />
        <operation path="/auth/logout" />
        <operation path="/operation/changePointGroup" />
        <operation path="/auth/change_password" />
    </operations>
</route>
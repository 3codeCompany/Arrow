<ul class="sort-container">
<?foreach($projects as $index => $p){ ?>
    <?
    $media = $p->getParameter("media");
    if($media){
    ?>
    <li data-key="<?=$p->_id()?>">
        <?=$p->_category()?>
        <img src="<?=MediaAPI::getMini($media["files"][0]["path"],115, 115, true)?>" style="height: 115px; width: 115px;" class="hasTooltip"  />
